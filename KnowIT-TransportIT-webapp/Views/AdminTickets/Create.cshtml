@model KnowIT_TransportIT_webapp.Models.TicketsModel

@{
    ViewData["Title"] = "Create";
}

<h1>CREATE A NEW TICKET/FARE</h1>

<h4>Carefully fill in the details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TripTitle" class="control-label"></label>
                <input asp-for="TripTitle" class="form-control" />
                <span asp-validation-for="TripTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketNumber" class="control-label"></label>
                <input asp-for="TicketNumber" class="form-control" />
                <span asp-validation-for="TicketNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketDescription" class="control-label"></label>
                <textarea asp-for="TicketDescription" class="form-control" rows="5"></textarea>
                <span asp-validation-for="TicketDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TicketAvailable" class="control-label"></label>
                <select asp-for="TicketAvailable" class="form-control">
                    <option value="none">-select-</option>
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
                <span asp-validation-for="TicketAvailable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="none">-select-</option>
                    <option value="Bus">Bus</option>
                    <option value="Trains">Trains</option>
                    <option value="Boats">Boats</option>
                    <option value="Trams">Trams</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WeekDay" class="control-label"></label>
                <select asp-for="WeekDay" class="form-control">
                    <option value="none">-select-</option>
                    <option value="Monday">Monday</option>
                    <option value="Tuesday">Tuesday</option>
                    <option value="Wednesday">Wednesday</option>
                    <option value="Thursday">Thursday</option>
                    <option value="Friday">Friday</option>
                    <option value="Saturday">Saturday</option>
                    <option value="Sunday">Sunday</option>
                </select>
                <span asp-validation-for="WeekDay" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
