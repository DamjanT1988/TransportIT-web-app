@model IEnumerable<KnowIT_TransportIT_webapp.Models.TicketsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>ADMIN FARES - ALL TICKETS/FARES</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Ticket/Fare</a>
</p>

<table class="table" id="sortableTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TripTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketAvailable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeekDay)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="truncate" title="@item.TripTitle">
                @Html.DisplayFor(modelItem => item.TripTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketNumber)
            </td>
            <td class="truncate" title="@item.TicketDescription">
                @Html.DisplayFor(modelItem => item.TicketDescription)
            </td>
            <td>
                @if (item.Price == 0)
                {
                    @:Free
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Price)
                }
            </td>

                <td style="@((item.TicketAvailable.HasValue && item.TicketAvailable.Value) ? "background-color: green;" : "background-color: red;")">
                    @(item.TicketAvailable.HasValue ? (item.TicketAvailable.Value ? "Selling" : "Inactive") : "N/A")
                </td>


            <td style="width: 10px;">
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <th>
               @Html.DisplayFor(model => item.WeekDay)
            </th>
            
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
